<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.ptz.controle">

    // Habilitando para internet
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Controle">
        <activity android:name=".sistema.Fornecedor"></activity>
        <activity android:name=".sistema.SistemaMainActivity" />

        // Refere-se ao Activity Login
        <activity
            android:name=".Login"
            android:label="@string/app_name_restrito"
            android:launchMode="singleTop"
            android:parentActivityName=".FullscreenActivity" >
        ,</activity>

        <activity
            android:name=".FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:parentActivityName=".FullscreenActivity"
            android:theme="@style/Theme.Controle.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>